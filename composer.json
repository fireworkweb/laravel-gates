{
    "name": "fireworkweb/laravel-gates",
    "description": "Permission handling for Laravel using Gates with Route Names",
    "keywords": [
        "fireworkweb",
        "laravel",
        "permission",
        "permissions",
        "gate",
        "gates",
        "acl",
        "rbac"
    ],
    "homepage": "https://github.com/fireworkweb/laravel-gates",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Polito",
            "email": "danielbpolito@gmail.com",
            "homepage": "https://dbpolito.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/support": "^5.8|^6.0|^7.0|^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "orchestra/testbench": "^3.8|^4.0|^5.0|^6.0|^7.0|^8.0",
        "phpunit/phpunit": "^8.2|^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Fireworkweb\\Gates\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Fireworkweb\\Gates\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fireworkweb\\Gates\\GatesServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
